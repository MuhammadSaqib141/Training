# DIND
    docker run --privileged -d --name dind docker:dind


#sharing HOST

# Use the Alpine base image
FROM alpine:latest

# Install Docker CLI
RUN apk add --no-cache docker-cli

# Set the entrypoint to a shell (you can modify this based on your needs)
ENTRYPOINT ["/bin/sh"]


docker build -t alpine-docker .
docker run -it --rm -v /var/run/docker.sock:/var/run/docker.sock alpine-docker
